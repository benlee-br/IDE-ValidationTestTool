                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Height="40" Width="40">
                                        <Rectangle Name="ColorBox" 
                                                       Height="32" Width="32" Fill="{Binding }" >
                                        </Rectangle>                                        
                                    </Grid>


                                    --><!--<Grid Grid.Row="1" Name="HtmlColorGrid" Height="32">
                                        <TextBlock Text="{Binding}"></TextBlock>
                                    </Grid>
                                    <Grid Grid.Row="2" Name="ColorNumberGrid" Height="32">
                                        <TextBlock Text="-12345"></TextBlock>
                                    </Grid>--><!--
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
